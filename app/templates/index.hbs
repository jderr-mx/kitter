<div class="row">
  {{#each model as |post|}}
    <div class="card rounded mb-5" style="width: 40rem;">
      <div class="card-body">
        <img class="card-img-top rounded-circle mb-2" src="{{post.user.profilePic}}" style=" width: 100%;">
        <div class="card-block">
          <h5 class="card-title clearfix">
            <span class="float-left">{{post.user.handle}}</span>
            <span class="float-right text-muted">{{date-time-format post.dateTime}}</span>
          </h5>
          <p class="card-text">{{post.text}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>