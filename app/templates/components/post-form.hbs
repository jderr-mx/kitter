{{#if isEditing}}
  <div class="card rounded mb-5 w-100" >
    <div class="card-body">
      <div class="card-block">
        <p>You have {{charsRemaining}} characters remaining</p>
        <div class="card-text">
          {{#field-error model=this didValidate=didValidate fieldName="postText" value=postText}}
            {{textarea value=postText rows=10 class="form-control post-text"}}
          {{/field-error}}
        </div>
          <div class="mt-2 float-right">
            <button {{action "savePost"}} type="button" class="btn btn-outline-primary post-save-button">Save</button>
            <button {{action "cancelPost"}} type="button" class="btn btn-outline-danger">Cancel</button>
          </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="clearfix">
    <div class="row float-right mb-2">
      <h3><span {{action 'createPost'}}>{{fa-icon "plus-circle"}}</span></h3>
    </div>
  </div>
{{/if}}